{
    "collMod": "household_ingredient_usage",
    "validator": {
        "$jsonSchema": {
            "bsonType": "object",
            "required": [
                "household_id",
                "ingredient_id",
                "used_quantity",
                "used_at"
            ],
            "properties": {
                "household_id": {
                    "bsonType": "objectId",
                    "description": "must be a valid ObjectId"
                },
                "ingredient_id": {
                    "bsonType": "objectId",
                    "description": "must be a valid ObjectId"
                },
                "used_quantity": {
                    "bsonType": "double",
                    "minimum": 0,
                    "description": "must be a double and non-negative"
                },
                "unit": {
                    "bsonType": "string",
                    "description": "must be a string and is required"
                },
                "used_at": {
                    "bsonType": "date",
                    "description": "must be a valid date"
                }
            }
        }
    }
}